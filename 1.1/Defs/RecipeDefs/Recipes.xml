<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <RecipeDef Name="CAN_InsectMealBase" Abstract="True">
    <fixedIngredientFilter>
      <thingDefs>
        <li>Meat_Megaspider</li>
      </thingDefs>
      <categories>
        <li>PlantFoodRaw</li>
        <li>AnimalProductRaw</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Meat_Megaspider</li>
      </thingDefs>
      <categories>
        <li>PlantFoodRaw</li>
        <li>AnimalProductRaw</li>
      </categories>
      <disallowedCategories>
        <li>EggsFertilized</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>InsectJelly</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
  </RecipeDef>
  <!-- Pemmican -->
  <RecipeDef Name="CAN_MakeInsectPemmican">
    <defName>CAN_MakeInsectPemmican</defName>
    <label>make insect pemmican</label>
    <description>Make Insect pemmican, a preserved combination of Insect meat and organic food. It doesn't taste amazing, but lasts a year without refrigeration.</description>
    <jobString>Making pemmican.</jobString>
    <workAmount>700</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Meat_Megaspider</li>
          </thingDefs>
        </filter>
        <count>0.25</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>AnimalProductRaw</li>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.25</count>
      </li>
    </ingredients>
    <products>
      <CAN_InsectPemmican>16</CAN_InsectPemmican>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Meat_Megaspider</li>
      </thingDefs>
      <categories>
        <li>PlantFoodRaw</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Meat_Megaspider</li>
      </thingDefs>
      <categories>
        <li>PlantFoodRaw</li>
      </categories>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
    <researchPrerequisite>Pemmican</researchPrerequisite>
  </RecipeDef>
  <RecipeDef ParentName="CAN_MakeInsectPemmican">
    <defName>CAN_MakeInsectPemmicanCampfire</defName>
    <workAmount>1400</workAmount>
  </RecipeDef>
